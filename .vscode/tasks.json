    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Henzai",
            "command": "dotnet build Henzai/Henzai.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build getting started",
            "command": "dotnet build Projects/getting_started/getting_started.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build textured cube",
            "command": "dotnet build Projects/textured_cube/textured_cube.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build offscreen",
            "command": "dotnet build Projects/offscreen/offscreen.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build sdl2-gui",
            "command": "dotnet build Projects/sdl2-gui/sdl2-gui.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build asset-loading",
            "command": "dotnet build Projects/asset-loading/asset-loading.csproj",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "compile metal shaders (Henzai)",
            "type": "shell",
            "group": "build",
            "command": "${cwd}/compileMetal.sh",
            "args": [
                "${cwd}/Henzai/Shaders/"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "compile metal shaders (Projects)",
            "type": "shell",
            "group": "build",
            "command": "${cwd}/compileMetal.sh",
            "args": [
                "${cwd}/Shaders/"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run getting started",
            "type": "shell",
            "group": "build",
            "command": "dotnet run --project Projects/getting_started/",
            "problemMatcher":"$msCompile"
        },
        {
            "label": "run textured cube",
            "type": "shell",
            "group": "build",
            "command": "dotnet run --project Projects/textured_cube/",
            "problemMatcher":"$msCompile"
        },
        {
            "label": "run offscreen",
            "type": "shell",
            "group": "build",
            "command": "dotnet run --project Projects/offscreen/",
            "problemMatcher":"$msCompile"
        },
        {
            "label": "run sdl2-gui",
            "type": "shell",
            "group": "build",
            "command": "dotnet run --project Projects/sdl2-gui/",
            "problemMatcher":"$msCompile"
        },
        {
            "label": "run asset-loading",
            "type": "shell",
            "group": "build",
            "command": "dotnet run --project Projects/asset-loading/",
            "problemMatcher":"$msCompile"
        }
    ]
}